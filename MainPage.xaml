<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="stocklily.MainPage">

    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

        <!-- Top-Right Buttons -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="End" Margin="10" Padding="20" Spacing="20">
            <Button Text="Login" />
            <Button Text="Register" />
        </StackLayout>

        <!-- Center Content -->
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Image Source="your_image.png" HeightRequest="100" WidthRequest="100" />
            <Label Text="STOCKLILY" FontSize="Header" HorizontalOptions="Center" Margin="10"/>
        </StackLayout>

    </StackLayout>

</ContentPage>
